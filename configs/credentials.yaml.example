# politext Credentials Template
# Copy this file to credentials.yaml and fill in your API credentials
# IMPORTANT: Never commit credentials.yaml to version control!

# Twitter/X API Credentials
# Get these from https://developer.twitter.com/
twitter:
  # Bearer Token (App-only authentication)
  # Required for most search operations
  bearer_token: "YOUR_BEARER_TOKEN_HERE"

  # OAuth 1.0a credentials (User authentication)
  # Required for some user-context operations
  api_key: "YOUR_API_KEY_HERE"
  api_secret: "YOUR_API_SECRET_HERE"
  access_token: "YOUR_ACCESS_TOKEN_HERE"
  access_token_secret: "YOUR_ACCESS_TOKEN_SECRET_HERE"

  # Your API access tier
  # Options: basic, pro, academic
  api_tier: basic

# Ethics Configuration
ethics:
  # Salt for hashing usernames (for consistent anonymization)
  # Generate a random string and keep it secret
  # Example: openssl rand -hex 32
  hash_salt: "YOUR_RANDOM_SALT_HERE"
